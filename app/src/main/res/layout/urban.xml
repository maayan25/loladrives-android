<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/titleUrban"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Urban"
        android:textSize="20pt"
        app:layout_constraintBottom_toTopOf="@+id/urbanDistance" />

    <TextView
        android:id="@+id/urbanDistance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Distance :"
        android:textSize="10pt"
        android:paddingBottom="40dp"
        app:layout_constraintBottom_toBottomOf="@id/titleUrban" />
    <TextView
        android:id="@+id/urbanTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time :"
        android:textSize="10pt"
        app:layout_constraintBottom_toBottomOf="@id/urbanDistance" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/progressDistanceLayout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/urbanTime"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/proportionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:text="Distance Proportion"
            android:textSize="10pt"
            app:layout_constraintTop_toTopOf="parent" />

        <me.tankery.lib.circularseekbar.CircularSeekBar
            android:id="@+id/progressProportionUrban"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/proportionText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:cs_start_angle = "-180"
            app:cs_end_angle = "0"
            app:cs_circle_progress_color = "#008612"
            app:cs_pointer_color = "#000000"
            app:cs_circle_stroke_width="23dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressDistanceLayout">

        <TextView
            android:id="@+id/dynamicsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:text="Dynamics"
            android:textSize="10pt"
            app:layout_constraintTop_toTopOf="parent" />

        <me.tankery.lib.circularseekbar.CircularSeekBar
            android:id="@+id/progressDynamicsUrbanLow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/dynamicsText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:cs_start_angle = "-180"
            app:cs_end_angle = "0"
            app:cs_circle_progress_color = "#008612"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Low"
            app:layout_constraintTop_toBottomOf="@id/progressDynamicsUrbanLow"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/progressDynamicsUrbanHigh"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="10pt"
            android:layout_marginStart="0dp"/>

        <me.tankery.lib.circularseekbar.CircularSeekBar
            android:id="@+id/progressDynamicsUrbanHigh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/dynamicsText"
            app:layout_constraintLeft_toRightOf="@id/progressDynamicsUrbanLow"
            app:layout_constraintEnd_toEndOf="parent"
            app:cs_start_angle = "-180"
            app:cs_end_angle = "0"
            app:cs_circle_progress_color = "#008612"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="High"
            app:layout_constraintTop_toBottomOf="@id/progressDynamicsUrbanHigh"
            app:layout_constraintLeft_toRightOf="@id/progressDynamicsUrbanLow"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="10pt"
            android:layout_marginStart="0dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--    Guidelines - Vertical  -->

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline75"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <!--    Guidelines - Horizontal  -->

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.30" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.60"/>

</androidx.constraintlayout.widget.ConstraintLayout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.cars.CarDetailFragment">

    <TextView
        android:id="@+id/manufacturerLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manufacturer: "
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/guidelineMark"
        app:layout_constraintLeft_toLeftOf="@id/guidelineLeft" />

    <TextView
        android:id="@+id/manufacturerTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="mark"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/guidelineMark"
        app:layout_constraintLeft_toRightOf="@id/manufacturerLabel" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineMark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineFuelType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <TextView
        android:id="@+id/fuelTypeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fuel Type: "
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/guidelineFuelType"
        app:layout_constraintLeft_toLeftOf="@id/guidelineLeft" />

    <TextView
        android:id="@+id/fuelTypeTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="fueltype"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/guidelineFuelType"
        app:layout_constraintLeft_toRightOf="@id/fuelTypeLabel" />

</androidx.constraintlayout.widget.ConstraintLayout>
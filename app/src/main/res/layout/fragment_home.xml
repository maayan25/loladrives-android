    <TextView
        android:id="@+id/textViewButtonImpressum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="15dp"
        android:text="Impressum"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/homeFooterText"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewDot"/>

    <TextView
        android:id="@+id/textViewDot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="•"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/homeFooterText"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textViewButtonImpressum"
        app:layout_constraintStart_toEndOf="@+id/textViewButtonAck" />

    <TextView
        android:id="@+id/textViewButtonAck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="10dp"
        android:text="Acknowledgements"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/homeFooterText"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textViewDot"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />


